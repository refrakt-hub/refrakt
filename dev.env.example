# Development Environment Configuration for Refrakt
# Copy this file to dev.env and fill in your actual values
# For production, use Doppler or another secrets manager

# Environment
ENVIRONMENT=development

# Server Configuration
PORT=8001
HOST=0.0.0.0
DEBUG=true
LOG_LEVEL=DEBUG

# CORS Configuration
CORS_ORIGINS=*

# Security Headers Configuration
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=0
HSTS_INCLUDE_SUBDOMAINS=false
HSTS_PRELOAD=false
CSP_POLICY=

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_PER_MINUTE=60
RATE_LIMIT_DEFAULT_BURST=100

# Graceful Shutdown Configuration
SHUTDOWN_TIMEOUT=30

# Uvicorn Production Settings (for production deployments)
UVICORN_WORKERS=1
UVICORN_TIMEOUT_KEEP_ALIVE=5
UVICORN_TIMEOUT_GRACEFUL_SHUTDOWN=30
UVICORN_ACCESS_LOG=false
UVICORN_LOG_LEVEL=info

# Cloudflare Tunnel (Development)
CLOUDFLARE_TUNNEL_CONFIG=./dev.yml
CLOUDFLARE_DOMAIN=dev.akshath.tech

# API Keys (REPLACE WITH YOUR OWN VALUES)
OPENAI_API_KEY=__REPLACE_ME__
OPENAI_MODEL=gpt-4o

# Queue Configuration
# Use the Redis instance running in Docker (redis service), exposed on host port 6380
QUEUE_URL=redis://localhost:6380/0
QUEUE_NAME=default
QUEUE_WORKER_CONCURRENCY=1
QUEUE_DEFAULT_TIMEOUT=7200
QUEUE_RETRY_LIMIT=3
QUEUE_RETRY_BACKOFF=2.0
QUEUE_VISIBILITY_TIMEOUT=30
QUEUE_RETRY_DELAY=30

PROMETHEUS_BEARER_TOKEN=__REPLACE_ME__
PROMETHEUS_QUEUE_POLL_INTERVAL=5

# Paths
JOBS_DIR=./jobs
CHECKPOINTS_DIR=./checkpoints
LOGS_DIR=./logs

# UV Configuration
UV_SYNC_PYPROJECT=1

